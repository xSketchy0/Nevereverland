{% assign logo = section.settings.header_logo %}
{% assign instagram = section.settings.instagram %}
{% assign vimeo = section.settings.vimeo %}
{% assign header_logo = section.settings.header_logo %}
{% assign header_logo_mobile = section.settings.header_logo_mobile %}

<div id="header" class="header">
    <div class="header__menu">
        <div class="header__left">
            <button id="menu-open">
                {% render 'icon-menu-alt-2' %}
            </button>
        </div>
        <div class="header__center">
            <a href="{{ routes.root_url }}" class="header__logo-link">
                {% if logo == blank %}
                    <h1>
                        {{ shop.name }}
                    </h1>
                {% else %}
                    <img id="header_logo_mobile" src="{{ section.settings.header_logo_mobile | image_url: width: 150 }}" alt="{{ section.settings.header_logo_mobile.alt }}">
                    <img id="header_logo" src="{{ section.settings.header_logo | image_url: width: 150 }}" alt="{{ section.settings.header_logo.alt }}">
                {% endif %}
            </a>
        </div>
        <div class="header__right">
            <button>
                {% render 'icon-search' %}
            </button>
            <button>
                <a href="{{ routes.cart_url }}">
                    {% render 'icon-shopping-bag' %}
                </a>
            </button>
        </div>
    </div>
    <div class="header__fullscreen">
        <div class="header__fullscreen__left">
            <!-- <div class="header__fullscreen__logo">
                <div class="header__fullscreen__logo__wrapper">
                    {% render 'logo-script' %}
                </div>
            </div> -->
            <div class="header__fullscreen__left__wrapper">
                <div class="header__fullscreen__left__menu">
                    {% for link in section.settings.fullscreen_menu.links %}
                        {% if link.links != blank %}

                        {% else %}
                            <a href="{{ link.url }}" >
                                {{ link.title }}
                            </a>
                        {% endif %}
                    {% endfor %}
                    <div class="header__fullscreen__left__menu-social">
                        {% if instagram %}
                            <a href="{{ instagram }}">{% render 'icon-instagram' %}</a>
                        {% endif %}
                        {% if vimeo %}
                            <a href="{{ vimeo }}">{% render 'icon-vimeo' %}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <div class="header__fullscreen__right" style="background: url({{ 'james-pose.static.png' | asset_url }}) no-repeat center;background-size:50%;background-color: #F2E5D0;background-blend-mode:luminosity;"></div>
    </div>
</div>

{% comment %}
