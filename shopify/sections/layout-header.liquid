                        {% if vimeo %}
                            <a href="{{ vimeo }}">{% render 'icon-vimeo' %}</a>
                        {% endif %}
                    </div>
                </div>
                <div style="background: url({{ 'james-pose.static.png' | asset_url }}) no-repeat center;background-size:contain;">

                </div>
            </div>
        </div>

    </div>
